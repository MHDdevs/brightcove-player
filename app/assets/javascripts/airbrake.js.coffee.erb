<% if (Rails.env.production? || Rails.env.staging? ) &&
  BrightcovePlayer.airbrake[:id].present? && BrightcovePlayer.airbrake[:key].present? %>

window.airbrake = new (airbrakeJs.Client)(
  projectId: '<%= BrightcovePlayer.airbrake[:id] %>'
  projectKey: '<%= BrightcovePlayer.airbrake[:key] %>')
window.airbrake.addFilter (notice) ->
  return notice if notice.context.error_type == 'ooyala'
  null
<% end %>
